/dts-v1/;
#include "exynos3830.dts"

/ {
	compatible = "samsung,exynos3830", "samsung,SMDK3830";
	board_id = <0x0>;
	board_rev = <0x0>;

//	fragment@model {
//		target-path = "/";
//		__overlay__ {
			#address-cells = <2>;
			#size-cells = <1>;

			model = "Samsung SMDK3830 board based on EXYNOS3830";

			memory@80000000 {
				device_type = "memory";
				reg = <0x0 0x80000000 0x80000000>;
			};

			memory@880000000 {
				device_type = "memory";
				reg = <0x00000008 0x80000000 0x80000000>;
			};

			chosen {
				bootargs = "earlycon=exynos4210,0x13820000 console=ttySAC0,115200n8 root=/dev/ram0 rw ramdisk=8192 initrd=0x84000000,8M init=/linuxrc mem=512M clk_ignore_unused";
				linux,initrd-start = <0x84000000>;
				linux,initrd-end = <0x842FFFFF>;
			};

			fixed-rate-clocks {
				oscclk {
					compatible = "samsung,exynos3830-oscclk";
					clock-frequency = <26000000>;
				};
			};
//		}; /* end of __overlay__ */
//	}; /* end of fragment */
}; /* end of root */

&serial_0 {
	status = "okay";
};

&panel_0 {
    /* reset, power */
    gpios = <&gpg2 5 0x1>, <&gpg1 1 0x1>;
};
